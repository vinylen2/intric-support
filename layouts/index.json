{{- /* Minimal search index JSON for Hextra */ -}}
[
  {{- $pages := site.RegularPages -}}
  {{- range $i, $p := $pages -}}
    {{- if $i }},{{ end -}}
    {
      "title": {{ $p.Title | jsonify }},
      "summary": {{ $p.Summary | jsonify }},
      "permalink": {{ $p.Permalink | jsonify }},
      "relpermalink": {{ $p.RelPermalink | jsonify }},
      "section": {{ $p.Section | jsonify }},
      "lang": {{ $p.Lang | jsonify }}
    }
  {{- end -}}
]